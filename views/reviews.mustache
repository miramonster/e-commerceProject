<html>
    <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/main.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    
    <body>
    <!-- Start of Nav Bar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light min-vw-100">
            <div class="container-fluid">
                <a class="navbar-brand mx-auto ps-5 fw-bolder" href="/">
                    <img src="/images/LogoCamera.png" style="width:85px"/>
                </a>
                </button>
                <ul class="d-flex navbar-nav mb-2 mb-lg-0 me-4 pb-5">
                    <li>
                        <a class="logBtn nav-link" data-bs-toggle="modal" data-bs-target="#staticBackdrop" href="/{{log}}">{{log}}</a>
                    </li>
                </ul>
                </div>
            </div>
        </nav>
        <nav class="navbar navbar-expand-lg navbar-light bg-light min-vw-100 sticky-top">
            <div class="container-fluid">
                <button class="navbar-toggler mx-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item mx-5">
                            <a class="nav-link active fw-bold" aria-current="page" href="/">Home</a>
                            </li>

                            <li class="nav-item dropdown mx-5">
                                <a class="nav-link dropdown-toggle fw-bold" href="/products/category" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Products
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="/products/view-all">View All</a></li>
                                    <li><a class="dropdown-item" href="/products/category/cameras">Digital Cameras</a></li>
                                    <li><a class="dropdown-item" href="/products/category/lenses">Lenses</a></li>
                                    <li><a class="dropdown-item" href="/products/category/drones">Drones & Aerial Imaging</a></li>
                                    <li><a class="dropdown-item" href="/products/category/lighting">Lighting Equipment</a></li>
                                    <li><a class="dropdown-item" href="/products/category/accessories">Accessories</a></li>
                                    <li><a class="dropdown-item" href="/products/category/books">Books & Tutorials</a></li>
                                </ul>
                            <li class="nav-item mx-5">
                            <a class="nav-link fw-bold" href="/user/dashboard">Dashboard</a>
                            </li>
                        </ul>
                </div>
            </div>
        </nav>
        <!-- End of Nav Bar -->
        <br />
        <div class="container-fluid min-vh-100">
            {{#userReviews}}
            <div class="card m-3">
                <div class="card-header">
                    {{title}}
                </div>
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                    <p>{{body}}</p>
                    <footer class="blockquote-footer">Rating: {{rating}}/5</footer>
                    <a href="/products/detail/{{product_id}}">Product Link</a>
                    </blockquote>
                    <form method="POST" action="/user/dashboard/reviews/delete/{{id}}">
                        <button>Delete</button>
                    </form>
                </div>
            </div>
            {{/userReviews}}
            {{^userReviews}}
                You have not made any reviews.
            {{/userReviews}}
        </div>

                <!-- Start of All Footer -->
        <div class="container-fluid my-0 mx-0 py-0 px-0">
            <!-- Start of Blue Footer -->
            <div class="footer row">
                <!-- Start of Subscribe email -->
                <div class="col-lg-6">
                    <div class="footer-subscribe">
                        <h6>Subscribe to our mailing list</h6>
                        <p>Get in touch with our latest promotions and events</p>
                        <form>
                            <div class="form-group d-flex">
                                <input type="email" class="form-control" id="subEmail" value="Email" aria-describedby="emailHelp">
                                <button class="subscribeBtn">Subscribe</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- End of Subscribe Email -->

                <!-- Start of Contact and Location -->
                <div class="col-lg-2 desktop">
                    <p>000 1234 5678</p>
                    <p><a href="mailto:#">cameracouture.com</a></p>
                    <p><a href="#">FIND A STORE</a></p>
                </div>
                <!-- End of Contact and Location -->

                <!-- Start of Contact Us Footer Links -->
                <div class="col-lg-2 desktop">
                    <p><a href="#" data-toggle="modal" data-target="#contactUs">CONTACT US</a></p>
                    <p><a href="#">ORDERING & PAYMENT</a></p>
                    <p><a href="#">SHIPPING</a></p>
                    <p><a href="#">RETURN</a></p>
                    <p><a href="#">FAQ</a></p>
                </div>
                <!-- End of Contact Us Footer Links -->

                <!-- Start of About Us Footer Links -->
                <div class="col-lg-2 desktop">
                    <p><a th:href="@{about}">ABOUT US</a></p>
                    <p><a href="#">WORK WITH US</a></p>
                    <p><a href="#">PRIVACY POLICY</a></p>
                    <p><a href="#">TERMS & CONDITIONS</a></p>
                    <p><a href="#">PRESS ENQUIRIES</a></p>
                </div>
                <!-- End of About Us Footer Links -->
            </div>
            <!-- End of Blue Footer -->

            <!-- Start of Copyright/Social Links -->
            <div class="footer-social row px-5 pt-2">
                <div class="col-lg-6">
                    <p>&#169; 2022</p>
                </div>
                <div class="col-lg-6 text-end desktop">
                    <p>
                        <a href="https://instagram.com" target="_blank"><i class="fab fa-instagram px-2"></i></a>
                        <a href="https://facebook.com" target="_blank"><i class="fab fa-facebook px-2"></i></a>
                        <a href="https://twitter.com" target="_blank"><i class="fab fa-twitter px-2"></i></a>
                        <a href="https://pinterest.com" target="_blank"><i class="fab fa-pinterest px-2"></i></a>
                    </p>
                </div>
            </div>
            <!-- End of Copyright/Social Links -->
        </div>
        <!-- End of All Footer -->
    <div class="modal fade" id="staticBackdrop" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" data-backdrop="false">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Login</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="col justify-content-center">
              <form method="POST" action="/login" class="inputIndex">
                  <input type="text" placeholder="Username" name="usernameText" />
                  <input type="password" placeholder="Password" name="passwordText" />
                  <button class="btn btn-warning btn-sm">Login</button>
              </form>
            </div>
            <div class="modal-footer">
              <p>
              Don't Have an Account?
              <a href="/register">Register Now</a>
              </p>
          </div>
        </div>
      </div>
    </div>
    <script src="https://kit.fontawesome.com/5704215aa3.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


        
    </body>
</html>