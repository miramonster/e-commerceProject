        <h1>User Dashboard</h1>

        <br />

        <div class="container-fluid vw-100 min-vh-100 px-5">
            <div class="row">                   
                <div class="col-lg-3 col-md-6 col-sm-10 mb-2" >
                    <div class="col d-flex align-items-center justify-content-center">
                        <a href="/user/dashboard/add-listing">
                            <button type="button" class="btn btn-warning btn-lg">Add a Listing</button>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-10 mb-2" >
                    <div class="col d-flex align-items-center justify-content-center">
                        <a href="/user/dashboard/reviews">
                            <button type="button" class="btn btn-warning btn-lg">View Your Reviews</button>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-10 mb-2" >
                    <div class="col d-flex align-items-center justify-content-center">
                        <a href="/user/dashboard/add-listing">
                            <button type="button" class="btn btn-warning btn-lg">View Your Messages</button>
                        </a>
                    </div>
                </div>      
            </div>

            <br />
            

            {{! User Listings - Delete Function }}
            <h2>Your Listings</h2>
            <br />
            <div class="row">           
            {{#userListings}}               
                <div class="col-lg-2 col-md-6 col-sm-10" >
                    <div class="col d-flex align-items-center justify-content-center">
                        <div class="card mb-3" style="width: 13rem;">
                                <img src="/uploads/{{image}}" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <a href="/products/detail/{{id}}">
                                        <h5 class="userCardFont card-title">{{title}}</h5>
                                        <p class="userCardFont card-text">Rating: {{avg_rating}}/5 ({{reviewAmt}})</p>
                                        <p class="userCardFont card-text">${{price}}/</p>
                                    </a>
                                    <br /> 
                                    <div class="row">
                                        <form class="cardRow" method="POST" action="/user/listing/delete/{{id}}">
                                            <button class="btn btn-warning btn-sm">Delete</button>
                                        </form>
                                        <form class="cardRow" method="GET" action="/user/listing/edit/{{id}}">
                                            <button class="btn btn-warning btn-sm">Edit</button>
                                        </form>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            {{/userListings}}        
            </div>
        </div>


